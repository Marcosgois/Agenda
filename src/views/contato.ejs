<%- include('includes/head') %>
    <%- include('includes/nav') %>

        <div class="conteiner">
            <div class="row">
                <div class="col-lg-2"></div>

                <div class="col-lg-8 my-3">
                    <h1 class="text-center">Agenda</h1>
                    <p class="text-center lead">Seus contatos est√£o abaixo:</p>
                    <%- include('includes/messages') %>
                        <div class="row">
                            <div class="col-lg">
                                <h4>Cadastro de Contato</h4>
                                <% if(contact._id) {%>
                                    <form action="/contato/edit/<%= contact._id %>" method="POST">
                                        <% } else { %>
                                            <form action="/contato/register" method="POST">
                                                <% } %>
                                                    <input type="hidden" name="_csrf" value=<%=csrfToken%>>
                                                    <div class="mb-3">
                                                        <label for="InputNome" class="form-label">Nome</label>
                                                        <input type="text" value="<%= contact.nome %>"
                                                            class="form-control" name="nome">
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="InputSobrenome" class="form-label">Sobrenome</label>
                                                        <input type="text" value="<%= contact.sobrenome %>"
                                                            class="form-control" name="sobrenome">
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="InputEmail" class="form-label">Email</label>
                                                        <input type="email" value="<%= contact.email %>"
                                                            class="form-control" name="email">
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="InputTel" class="form-label">Telefone</label>
                                                        <input type="tel" value="<%= contact.telefone %>"
                                                            class="form-control" name="telefone">
                                                    </div>
                                                    <button type="submit" class="btn btn-primary">Cadastrar</button>
                                            </form>
                            </div>
                        </div>
                </div>
                <div class="col-lg-2"></div>
            </div>
        </div>

        <%- include('includes/footer') %>